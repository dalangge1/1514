<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/grid_item_layout">
    
    <Button
        android:id="@+id/grid_item_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="35sp"/>

    <LinearLayout
        android:id="@+id/history_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <TableRow
        android:id="@+id/history_table_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/history_table_row_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/history_table_row_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:textSize="14sp"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/history_table_row_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:textSize="14sp"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/history_table_row_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:textSize="14sp"
            android:layout_column="3"/>
    </TableRow>

</LinearLayout>